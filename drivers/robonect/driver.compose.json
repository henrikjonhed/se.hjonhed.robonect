{
  "name": {
    "en": "Robonect"
  },
  "class": "other",
  "capabilities": [
    "measure_battery",
    "measure_humidity",
    "measure_temperature",
    "status_mode",
    "mode",
    "signal",
    "timer_status",
    "button.poll_now",
    "blade_quality",
    "alarm_generic.stopped",
    "alarm_generic.error_active",
    "total_run_time"
  ],
  "capabilitiesOptions": {
    "button.poll_now": {
      "maintenanceAction": true,
      "title": {
        "en": "Fetch status now"
      },
      "desc": {
        "en": "Fetch the current status of the mower right now instead of waiting for the next scheduled update."
      }
    },
    "alarm_generic.stopped": {
      "title": {
        "en": "Stopped"
      },
      "desc": {
        "en": "The mower has stopped and needs to be manually enabled again."
      },
      "insightsTitleTrue": {
        "en": "Mower stopped"
      },
      "insightsTitleFalse": {
        "en": "Mower is no longer stopped"
      }
    },
    "alarm_generic.error_active": {
      "title": { "en": "Error active" },
      "desc": {
        "en": "Indicates if the mower has an error set or not."
      },
      "insightsTitleTrue": {
        "en": "An error has been set, see device settings for details"
      },
      "insightsTitleFalse": {
        "en": "No error is currently present"
      }
    }
  },
  "platforms": ["local"],
  "connectivity": ["lan"],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "energy": {
    "batteries": ["INTERNAL"]
  },
  "discovery": "robonect-mdns",
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "login_credentials"
      }
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "logo.png",
        "usernameLabel": {
          "en": "User"
        },
        "usernamePlaceholder": {
          "en": "User"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      },
      "navigation": {
        "next": "add_device"
      }
    },
    {
      "id": "add_device"
    }
  ],
  "settings": [
    {
      "id": "poll_interval",
      "type": "number",
      "value": 1,
      "min": 0.1,
      "max": 60,
      "label": {
        "en": "Polling interval (minutes)"
      },
      "hint": {
        "en": "The interval between the attempts to read an update from the mower."
      }
    },
    {
      "id": "address",
      "type": "text",
      "label": {
        "en": "IP address on local network"
      },
      "value": "x.x.x.x"
    },
    {
      "type": "group",
      "label": "Login Credentials",
      "children": [
        {
          "id": "username",
          "type": "text",
          "label": {
            "en": "Username"
          },
          "value": "admin"
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          }
        }
      ]
    },
    {
      "id": "error_message",
      "type": "label",
      "label": "Current error message",
      "value": "No error is currently set"
    }
  ]
}
